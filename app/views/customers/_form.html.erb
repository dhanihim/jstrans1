<%= form_with(model: customer) do |form| %>
  <% if customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
        <% customer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.text_field :name, class:"form-control", placeholder:"Name", autocomplete:"off", autofocus:"true", required:"true" %>
  </div>

  <div class="field form-group">
    <%= form.text_field :address, class:"form-control", placeholder:"Address", autocomplete:"off"  %>
  </div>

  <div class="field form-group">
    <%= form.text_field :contact, class:"form-control", placeholder:"Contact", autocomplete:"off"  %>
  </div>

  <div class="field form-group">
    <%= form.text_field :npwp, class:"form-control", placeholder:"NPWP", autocomplete:"off"  %>
  </div>

  <div class="field form-group">
    <%= form.text_field :person_responsible, class:"form-control", placeholder:"Person Responsible", autocomplete:"off"  %>
  </div>

  <div class="field form-group">
    <%= form.text_field :person_responsible_uid, class:"form-control", placeholder:"Person Responsible ID Number", autocomplete:"off"  %>
  </div>

  <div class="field form-group">
    <%= form.text_field :active, class:"form-control", placeholder:"Active", value:"1", readonly:"true", hidden:"true" %>
  </div>

  <div class="field form-group">
    <%= form.text_area :description, class:"form-control", placeholder:"Description", autocomplete:"off"  %>
  </div>

  <br>

  <div class="actions">
    <%= form.submit class:"btn btn-primary" %>
  </div>
<% end %>
