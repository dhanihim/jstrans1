<h4>Customers</h4>

<br>
<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Contact</th>
      <th colspan="3" style="width:5%"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.address %></td>
        <td><%= customer.contact %></td>
        <td><%= link_to 'Detail', customer, class:"btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer), class:"btn btn-info" %></td>
        <td><%= link_to 'X', customer, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'New Customer', new_customer_path, class:"btn btn-primary" %>
